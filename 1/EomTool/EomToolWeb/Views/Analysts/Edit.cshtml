@model Analyst
@{
    ViewBag.Title = "Edit Analyst";
    IEnumerable<AnalystManager> analystManagers = ViewBag.Managers;
    var analystManagerSelectList = new SelectList(analystManagers, "id", "name");
}

<h3>Edit Analyst</h3>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <fieldset>
        <legend>Analyst</legend>
        @Html.HiddenFor(m => m.id)
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.id)</td>
                <td>@Html.DisplayFor(m => m.id)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.name)</td>
                <td>@Html.EditorFor(m => m.name)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.comm_rate, "Commission Rate")</td>
                <td>@Html.TextBoxFor(m => m.comm_rate)</td>
            </tr>
            <tr>
                <td></td>
                <td>1.5% = 0.015</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.manager_id, "Manager")</td>
                <td>@Html.DropDownListFor(m => m.manager_id, analystManagerSelectList, "(none)")</td>
            </tr>
        </table>
        <br />
        <input type="submit" value="Save" />
    </fieldset>
}
<br />
@Html.ActionLink("Cancel", "Index")
