@model IEnumerable<PubAttachment>
@{
    var acctperiod = ViewData["acctperiod"];
    int i = 1;
}

@if (Model.Count() == 0)
{
    <i>No attachments</i>
}

<table>
@foreach (var attachment in Model)
{
    <tr>
        <td>@(i).&nbsp;&nbsp;@attachment.name</td>
        <td>@Html.ActionLink("view", "PubAttachment", new { id = attachment.id, acctperiod = acctperiod }, new { target = "_blank" })</td>
        <td>@Html.ActionLink("download", "PubAttachment", new { id = attachment.id, acctperiod = acctperiod, download = true })</td>
        <td><i>@attachment.description</i></td>
    </tr>
    i++;
}
</table>