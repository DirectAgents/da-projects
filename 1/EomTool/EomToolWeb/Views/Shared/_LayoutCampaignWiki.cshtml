<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Campaign Wiki</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
</head>
<body>
    <header>
    <div class="content-wrapper">
        <div class="float-left">
            <nav>
                <ul id="menu">
                    <li>Show:</li>
                    <li>@Html.ActionLink("By Country", "ListByCountry", "Campaigns")</li>
                    <li>@Html.ActionLink("US", "List", "Campaigns", new { country = "US", vertical = "Insurance" }, null)</li>
                    <li>@Html.ActionLink("All", "List", "Campaigns")</li>
                    <li>@Html.ActionLink("Country List", "ShowCountries", "Campaigns")</li>
                </ul>
            </nav>
        </div>
    </div>
</header>
    <div id="body">
        <section class="content-wrapper main-content clear-fix">
        @RenderBody()
    </section>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
