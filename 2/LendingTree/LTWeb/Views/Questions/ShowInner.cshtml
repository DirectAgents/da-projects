@model LTWeb.Models.QuestionVM

@Model.Text<br />
<input type="hidden" name="QuestionKey" value="@Model.Key" />

@switch (Model.AnswerType)
{
    case "dropdown":
        <select name="@Model.Key" class="validate[required]" data-prompt-position="bottomRight">
        @foreach (var option in Model.Options)
        {
            <option value="@option.Value" @( option.Value == Model.Answer ? "selected=\"selected\"" : "" )>@option.Text</option>
        }
        </select>
        break;
    case "radio":
        foreach (var option in Model.Options)
        {
            <input type="radio" name="@Model.Key" value="@option.Value" @( option.Value == Model.Answer ? "checked=\"checked\"" : "" ) />@option.Text<br />
        }
        break;
    case "3part":
        <input name="@Model.Key" type="text" />
        break;
    case "zipcode":
        <input name="@Model.Key" type="text" value="@Model.Answer" maxlength="5" class="validate[required,custom[zipcode]]" data-prompt-position="bottomLeft" />
        break;
    default:
        <input name="@Model.Key" type="text" value="@Model.Answer" class="validate[required]" data-prompt-position="bottomLeft" />
        break;
}
@if (!string.IsNullOrWhiteSpace(Model.Subtext)) {
    <br />@Model.Subtext
}
