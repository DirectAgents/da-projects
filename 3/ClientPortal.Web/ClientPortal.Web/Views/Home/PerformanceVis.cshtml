<div class="chart-wrapper">
    <div id="perfChart"></div>
</div>

<script>
    function CreatePerformanceChart(values, valueFormat, culture, height) {
        kendo.culture(culture);
        $("#perfChart").kendoChart({
            chartArea: {
                height: height
            },
            legend: {
                visible: false
            },
            seriesDefaults: {
                type: "column"
            },
            series: [{
                data: values
            }],
            valueAxis: {
                labels: { format: valueFormat, step: 2 }
            },
            categoryAxis: {
                categories: ["Last Month", "MTD"]
            },
            tooltip: {
                visible: true,
                format: valueFormat
            }
        });
    }
</script>
