<div class="row">
    <div class="twelve columns">
        <div class="searchpanel" id="channelperfOuter">
            <b>Channel Performance</b>
            <a class="button paddedbutton" style="float: right" href="#" onclick="ExportChannelPerfCSV(); return false">Export CSV</a>
            <div id="channelperfGrid" style="margin-top: 10px"></div>
        </div>
    </div>
</div>

<style>
.k-grid-footer{
    display: none;
}
</style>

<script>
    $(function () {
        var channelperfDS = CreateSummaryDataSource('@Url.Action("ChannelPerfData", "SearchReports")', null, true, false, 0);
        CreateSummaryGrid(channelperfDS, $('#channelperfGrid'), 550, 'Channel', 17, 2, false, false, false, function (e) {
            DetailInit(e, '@Url.Action("CampaignPerfData", "SearchReports")');
        });
        channelperfDS.read();
    });

    function ExportChannelPerfCSV() {
        window.location.href = '@Url.Action("ChannelPerfExport", "SearchReports")';
    }
</script>
