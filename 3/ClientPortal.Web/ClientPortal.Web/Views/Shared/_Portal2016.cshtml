@{
    bool hasProg = ViewBag.HasProg ?? true;
    bool hasSearch = ViewBag.HasSearch ?? true;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"><head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>@ViewBag.Title</title>
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css' />
<link href='~/Content/progstyle.css' rel="stylesheet" type="text/css" />

<link href="https://kendo.cdn.telerik.com/2016.2.714/styles/kendo.common-bootstrap.min.css" rel="stylesheet" />
<link href="https://kendo.cdn.telerik.com/2016.2.714/styles/kendo.bootstrap.min.css" rel="stylesheet" />
<link href="https://kendo.cdn.telerik.com/2016.2.714/styles/kendo.default.mobile.min.css" rel="stylesheet" />

<link href='~/Content/progstyle2.css' rel="stylesheet" type="text/css" />
<link href='~/Content/portal2016.css' rel="stylesheet" type="text/css" />

<script src="https://kendo.cdn.telerik.com/2016.2.714/js/jquery.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2016.2.714/js/kendo.all.min.js"></script>

<script src="~/Scripts/progscript.js"></script>
<script src="~/Scripts/portal2016.js"></script>
</head>

<body>
<div id="header">
    <div id="container">
        <div class="logo">&nbsp;</div>
        <div id="cssmenu">
            <ul>
@if (hasSearch && hasProg) {
                <li class="summary-report"><a href="@Url.Action("Index", "Combined", new { Area = "" })">Overall Summary</a></li>
}
@if (hasSearch) {
                <li class="search-reports"><a href="@Url.Action("Weekly", "Search", new { Area = "" })">Search Reports</a>
                    <ul class="submenu">
                        <li><a href="@Url.Action("Weekly", "Search", new { Area = "" })">Weekly</a></li>
                        <li><a href="@Url.Action("Monthly", "Search", new { Area = "" })">Monthly</a></li>
                        <li><a href="@Url.Action("ChannelPerf", "Search", new { Area = "" })">Channel Performance</a></li>
                        <li><a href="@Url.Action("CampaignPerf", "Search", new { Area = "" })">Campaign Performance</a></li>
                        <li><a href="@Url.Action("CampaignWeekly", "Search", new { Area = "" })">Campaign Weekly</a></li>
                    </ul>
                </li>
}
@if (hasProg) {
                <li class="programmatic-reports"><a href="@Url.Action("Index", "Home", new { Area = "Prog" })">Programmatic Reports</a>
                    <ul class="submenu">
                        <li><a href="@Url.Action("Index", "Home", new { Area = "Prog" })">Executive Summary</a></li>
                        <li><a href="@Url.Action("Strategy", "Home", new { Area = "Prog" })">Strategy Summary</a></li>
                        <li><a href="@Url.Action("Weekly", "Home", new { Area = "Prog" })">Weekly Summary</a></li>
                        <li><a href="@Url.Action("Creative", "Home", new { Area = "Prog" })">Creative Performance</a></li>
                    </ul>
                </li>
}
@if (hasSearch) {
                <li class="contact"><a href="@Url.Action("Contact", "Search", new { Area = "" })">Contact</a></li>
}
                <li class="logout">
                    @Html.Partial("_LoginPartial", model: false)
                </li>
            </ul>
        </div>
    </div>
</div>

@RenderBody()

<div id="footer">
</div>
@RenderSection("scripts", required: false)
</body>
</html>
