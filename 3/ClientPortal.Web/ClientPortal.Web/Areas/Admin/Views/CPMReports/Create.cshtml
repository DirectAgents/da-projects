@model ClientPortal.Data.Contexts.CPMReport
@{
    var ajaxOptions = RazorHelpers.GetAjaxOptions("cpmReportsTab", null, "Post");
}

<h3>Create Report</h3>

@using (Ajax.BeginForm(ajaxOptions))
{
    @Html.ValidationSummary()

    <fieldset>
        <legend>CPM Report</legend>
        @Html.HiddenFor(m => m.OfferId)
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Offer.Advertiser.AdvertiserName, "Advertiser")</td>
                <td>@Html.DisplayFor(m => m.Offer.Advertiser.AdvertiserName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Offer.OfferName, "Offer")</td>
                <td>@Html.DisplayFor(m => m.Offer.OfferName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Name, "Report Name")</td>
                <td>@Html.EditorFor(m => m.Name)</td>
            </tr>
        </table>

        <br />
        <input type="submit" value="Create Report" />
        @if (!IsAjax)
        {
            <text>&nbsp;</text>@Html.ActionLink("Cancel", "Show", "Offers", new { id = Model.OfferId }, null)
        }
    </fieldset>
}
