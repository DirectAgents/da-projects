@model ClientPortal.Data.Contexts.Creative

<h3>Edit Creative</h3>

Offer: @Model.Offer.DisplayName
<br />

@using (Ajax.BeginForm(new AjaxOptions { })) //UpdateTargetId =
{
    @Html.ValidationSummary()

    <fieldset>
        <legend>Creative</legend>
        @Html.HiddenFor(m => m.CreativeId)
        @Html.HiddenFor(m => m.OfferId)

        @Html.HiddenFor(m => m.DateCreated)
        @Html.HiddenFor(m => m.CreativeTypeId)
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.DateCreated, "Created")</td>
                <td>@Html.DisplayFor(m => m.DateCreated, "Date")</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.CreativeName, "Name")</td>
                <td>@Html.TextBoxFor(m => m.CreativeName, new { size = 60 })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.CreativeType, "Type")</td>
                <td>@Html.DisplayFor(m => m.CreativeType.CreativeTypeName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.CreativeStatusId, "Status")</td>
                <td>@Html.DisplayFor(m => m.CreativeStatusId)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.OfferLinkOverride)</td>
                <td>@Html.DisplayFor(m => m.OfferLinkOverride)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Width)</td>
                <td>@Html.DisplayFor(m => m.Width)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Height)</td>
                <td>@Html.DisplayFor(m => m.Height)</td>
            </tr>
        </table>
        <br />
        <input type="submit" value="Save" />
        &nbsp;
        @Html.ActionLink("Cancel", "Show", "Offers", new { id = Model.OfferId }, null)
    </fieldset>
}
