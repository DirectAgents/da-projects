@model DirectAgents.Domain.Entities.TD.Advertiser
@{
    var ajaxOptions = RazorHelpers.GetAjaxOptions("progAdvertisersTab");
    var ajaxOpts_Post = RazorHelpers.GetAjaxOptions("progAdvertisersTab", null, "Post");
}

@using (Ajax.BeginForm(ajaxOpts_Post))
{
    @Html.ValidationSummary()
    <fieldset>
        <legend>Create UserProfile</legend>
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Id)</td>
                <td>@Html.DisplayFor(m => m.Id)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Name, "Advertiser")</td>
                <td>@Html.DisplayFor(m => m.Name)</td>
            </tr>
            <tr>
                <td>Username</td>
                <td>@Html.TextBox("username")</td>
            </tr>
            <tr>
                <td>Password</td>
                <td>@Html.TextBox("password", null, new { id = "progPassword" })<input type="button" value="Generate Password" onclick="GenerateProgPassword()" /></td>
            </tr>
        </table>
        <br />
        <input type="submit" value="Save" />
            &nbsp;@Ajax.ActionLink("cancel", "Advertisers", ajaxOptions)
    </fieldset>
}

<script>
    function GenerateProgPassword() {
        var chars = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXTZabcdefghiklmnopqrstuvwxyz";
        var string_length = 8;
        var randomstring = '';
        for (var i = 0; i < string_length; i++) {
            var rnum = Math.floor(Math.random() * chars.length);
            randomstring += chars.substring(rnum, rnum + 1);
        }
        $('#progPassword').val(randomstring);
    }
</script>
