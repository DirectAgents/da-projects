@model ClientPortal.Data.Contexts.Offer

Offer: <b>@Model.DisplayName</b>
<br /><br />

@if (Model.Logo != null)
{
    <text>Current Logo:</text><br/>
    <img src="@Url.Action("Logo", "Offers", new { id = Model.OfferId, v = DateTime.Now.Ticks })" />
}

@using (Html.BeginForm("UploadLogo", "Offers", new { id = Model.OfferId })) // note: action not used; it's specified in the kendoUpload setup
{
    <input id="offerLogoUpload" name="logo" type="file" />
}
