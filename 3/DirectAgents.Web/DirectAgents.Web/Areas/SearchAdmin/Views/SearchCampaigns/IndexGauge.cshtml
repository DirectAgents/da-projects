@using System.Globalization
@model IEnumerable<DirectAgents.Domain.Entities.CPSearch.SearchCampaign>


<h2>SearchCampaigns - StatsGauge</h2>

<table>
    <tr>
        <th style="text-align:right">spId</th>
        <th style="text-align:right">saId</th>
        <th style="text-align:right">Id</th>
        <th>CampaignName</th>
        <th style="text-align:center">DaySums</th>
        <th style="text-align:center">ConvSums</th>
        <th style="text-align:center">CallSums</th>
    </tr>
    @foreach (var sc in Model)
    {
        <tr>
            <td style="text-align:right">@(sc.SearchAccount != null ? sc.SearchAccount.SearchProfileId.ToString() : "")</td>
            <td style="text-align:right">@sc.SearchAccountId</td>
            <td style="text-align:right">@sc.SearchCampaignId</td>
            <td>@sc.SearchCampaignName</td>
            <td style="text-align:center">@sc.MinDaySum.ToString("d", CultureInfo.InvariantCulture) - @sc.MaxDaySum.ToString("d", CultureInfo.InvariantCulture)</td>
            <td style="text-align:center">@Html.ActionLink(sc.MinConvSum.ToString("d", CultureInfo.InvariantCulture) + " - " + sc.MaxConvSum.ToString("d", CultureInfo.InvariantCulture), "IndexGauge", "SearchConvTypes", new { scId = sc.SearchCampaignId }, null)</td>
            <td style="text-align:center">@sc.MinCallSum.ToString("d", CultureInfo.InvariantCulture) - @sc.MaxCallSum.ToString("d", CultureInfo.InvariantCulture)</td>
            <td>
                @Html.ActionLink("Edit-", "Edit", new { id = sc.SearchCampaignId })
                @sc.LCcmpid
            </td>
        </tr>
    }
</table>
<br />
