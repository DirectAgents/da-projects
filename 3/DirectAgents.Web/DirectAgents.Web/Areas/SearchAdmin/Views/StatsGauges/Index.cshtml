@using System.Globalization
@model IEnumerable<DirectAgents.Domain.Entities.CPSearch.SearchAccount>

<h2>StatsGauge - Channels</h2>

<table>
    <tr>
        <th>Channel</th>
        <th style="text-align:center">DaySums</th>
        <th style="text-align:center">ConvSums</th>
        <th style="text-align:center">CallSums</th>
    </tr>
    @foreach (var sa in Model.OrderBy(x => x.Channel != "Google").ThenBy(x => x.Channel))
    {
        <tr>
            <td>@Html.ActionLink(sa.Channel, "IndexGauge", "SearchAccounts", new { channel = sa.Channel.ToLower() }, null)</td>
            <td style="text-align:center">@sa.MinDaySum.ToString("d", CultureInfo.InvariantCulture) - @sa.MaxDaySum.ToString("d", CultureInfo.InvariantCulture)</td>
            <td style="text-align:center">@sa.MinConvSum.ToString("d", CultureInfo.InvariantCulture) - @sa.MaxConvSum.ToString("d", CultureInfo.InvariantCulture)</td>
            <td style="text-align:center">@sa.MinCallSum.ToString("d", CultureInfo.InvariantCulture) - @sa.MaxCallSum.ToString("d", CultureInfo.InvariantCulture)</td>
        </tr>
    }
</table>
<br />
@Html.ActionLink("By SearchProfile", "IndexGauge", "SearchProfiles")
<br />
@Html.ActionLink("By SearchAccount", "IndexGauge", "SearchAccounts")
