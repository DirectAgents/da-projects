@using DirectAgents.Web.Constants
@model IEnumerable<DirectAgents.Domain.Entities.CPProg.SearchTerm>

<h2>SearchTerms</h2>

<table>
    <tr>
        <th>Id</th>
        <th>@Html.ActionLink("Name", "SearchTerms")</th>
        <th>@Html.ActionLink("Keyword", "SearchTerms", new { sort = OrderBy.KeywordName })</th>
    </tr>
    @foreach (var term in Model)
    {
        <tr>
            <td>@term.Id</td>
            <td>@term.Name</td>
            <td>@(term.Keyword != null ? term.Keyword.Name + " (" + Html.ActionLink(term.KeywordId.ToString(), "Keywords", new { keywordId = term.KeywordId }) + ")" : "")</td>
        </tr>
    }
</table>


