@model DirectAgents.Web.Areas.ProgAdmin.Models.FacebookTotalsInfoVm
@{
    ViewBag.Title = "Facebook Latests Stats";

    var yesterday = DateTime.Today.AddDays(-1);
}

<h2>Facebook Totals Stats for @Model.LevelName level</h2>

<table>
    <tr>
        <th colspan="3" style="text-align:right">X = disabled</th>
        <th colspan="1">Impressions</th>
        <th colspan="1">Clicks</th>
        <th colspan="1">AllClicks</th>
        <th colspan="1">PostClickConv</th>
        <th colspan="1">PostViewConv</th>
        <th colspan="1">PostClickRev</th>
        <th colspan="1">PostViewRev</th>
        <th colspan="1">CostTotal</th>
    </tr>
    <tr>
        <th style="text-align:right">ID</th>
        <th colspan="2">External&nbsp;Account&nbsp;&nbsp;&nbsp;</th>

    </tr>
    @foreach (var accountSummary in Model.TotalsInfo)
    {
        <tr>
            <td style="text-align: right">@accountSummary.Account.Id</td>
            <td>@accountSummary.Account.Name</td>
            <td style="text-align: center">@(accountSummary.Account.Disabled ? "X" : "")</td>
            <td style="text-align: right">@accountSummary.ImpressionsTotal</td>
            <td style="text-align: right">@accountSummary.ClicksTotal</td>
            <td style="text-align: right">@accountSummary.AllClicksTotal</td>
            <td style="text-align: right">@accountSummary.PostClickConvTotal</td>
            <td style="text-align: right">@accountSummary.PostViewConvTotal</td>
            <td style="text-align: right">@accountSummary.PostClickRevTotal</td>
            <td style="text-align: right">@accountSummary.PostViewRevTotal</td>
            <td style="text-align: right">@accountSummary.CostTotal</td>
        </tr>
    }
</table>