@model IEnumerable<DirectAgents.Domain.Entities.TD.Campaign>
@{
    var today = DateTime.Today;
    var startOfMonth = new DateTime(today.Year, today.Month, 1);
    var lastMonth = startOfMonth.AddMonths(-1);
    string advId = (string)Session["advId"];
}

<h2>Campaigns</h2>

<table>
<tr>
    <th></th>
    <th>Advertiser</th>
    <th>Campaign</th>
    <th>Ext Accts</th>
    <th>Partners</th>
    <th></th>
</tr>
@foreach (var camp in Model)
{
<tr>
    <td>@Html.ActionLink("Details", "Show", new { id = camp.Id })</td>
    <td>@camp.Advertiser.Name</td>
    <td>@camp.Name</td>
    <td style="text-align:center">
        @if (camp.ExtAccounts.Any()) {
            @Html.ActionLink("show(" + camp.ExtAccounts.Count + ")", "Index", "ExtAccounts", new { campId = camp.Id }, null)
        } else {
            <text>0</text>
        }
    </td>
    <td>@string.Join(", ", camp.ExtAccounts.Select(a => a.Platform).Distinct().Select(p => p.Name))</td>
    <td>
        @if (!camp.ExtAccounts.Any() && !camp.BudgetInfos.Any() && !camp.PlatformBudgetInfos.Any()) {
            @Html.ActionLink("Delete", "Delete", new { id = camp.Id }, new { onclick = "if (!confirm('Are you sure?')) return false" })
        }
    </td>
</tr>
}
</table>
<br />
@if (!string.IsNullOrWhiteSpace(advId))
{
    @Html.ActionLink("New Campaign", "CreateNew", new { advId = advId })
} else {
    <i>To create a campaign, go to
    @Html.ActionLink("Advertisers", "Index", "Advertisers")
    and click "show" under "Campaigns" for the desired Advertiser.</i>
}
<br /><br />
<i>To edit a campaign, click "Details".</i>
<br />
