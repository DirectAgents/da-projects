@model DirectAgents.Domain.Entities.TD.Campaign
@{
    string advId = (string)Session["advId"]; // for filtering when returning back to Index
}

<fieldset>
    <legend>Edit Campaign</legend>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.AdvertiserId)
        <div style="float:left">
            Advertiser: @Model.Advertiser.Name
            <br /><br />
            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.Id, "Campaign ID")</td>
                    <td>@Html.DisplayFor(m => m.Id)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Name, "Campaign Name")</td>
                    <td>@Html.EditorFor(m => m.Name)</td>
                </tr>
            </table>
            <br />
            Default Budget
            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.DefaultBudget.MediaSpend)</td>
                    <td>@Html.EditorFor(m => m.DefaultBudget.MediaSpend)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.DefaultBudget.MgmtFeePct)</td>
                    <td>@Html.EditorFor(m => m.DefaultBudget.MgmtFeePct)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.DefaultBudget.MarginPct)</td>
                    <td>@Html.EditorFor(m => m.DefaultBudget.MarginPct)</td>
                </tr>
            </table>
            <br />
            <input type="submit" value="Save" />
            &nbsp;@Html.ActionLink("cancel", "Index", new { advId = advId })
        </div>
    }
    <br style="clear:both" />
    <div style="float:left">
        <br />
        Recent Budgets
        <table>
            <tr>
                <th></th>
                <th>Month</th>
                <th>MediaSpend</th>
                <th>MgmtFeePct</th>
                <th>MarginPct</th>
            </tr>
        @foreach (var bi in Model.Budgets.OrderByDescending(b => b.Date).Take(6))
        {
            <tr>
                <td>@Html.ActionLink("Edit", "Edit", "BudgetInfos", new { campId = bi.CampaignId, date = bi.Date.ToShortDateString() }, null)</td>
                <td>@bi.Date.ToString("MMM yyyy")</td>
                <td style="text-align:right">@bi.MediaSpend.ToString("C")</td>
                <td style="text-align:center">@bi.MgmtFeePct.ToString("#0.### \\%")</td>
                <td style="text-align:center">@bi.MarginPct.ToString("#0.### \\%")</td>
            </tr>
        }
        </table>
        @{
            var months = Model.MonthsWithoutBudgets(3);
            if (months.Count() > 0)
            {
                <br />
                <text>Create Budget For:</text>
                <br />
                foreach (var month in months)
                {
                    @Html.ActionLink(month.ToString("MMM yyyy"), "Create", "BudgetInfos", new { campId = Model.Id, date = month.ToShortDateString() }, null)
                    <text><br /></text>
                }
            }
        }
        <br />
        External Accounts
        <table>
            <tr>
                <th>Platform</th>
                <th>Account</th>
                <th></th>
            </tr>
        @foreach (var acct in Model.ExtAccounts)
        {
            <tr>
                <td>@acct.Platform.Name</td>
                <td>@acct.Name (@acct.ExternalId)</td>
                <td>@Html.ActionLink("Remove from Campaign", "RemoveAccount", "Campaigns", new { id = Model.Id, acctId = acct.Id }, null)</td>
            </tr>
        }
        </table>
@{
    var extAccts = (IEnumerable<DirectAgents.Domain.Entities.TD.ExtAccount>)ViewBag.ExtAccounts;
    if (extAccts.Any())
    {
        <br />
        using (Html.BeginForm("AddAccount", "Campaigns", new { id = Model.Id }))
        {
            var extAcctSelectList = new SelectList(extAccts, "Id", "DisplayName1");
            <text>Add External Account:</text>
            <table><tr><td>
                @Html.DropDownList("acctId", extAcctSelectList)
            </td></tr></table>
            <input type="submit" value="Add" />
        }
    }
}
        <br />
        @Html.ActionLink("Back to Campaign List", "Index", new { advId = advId })
    </div>
</fieldset>
