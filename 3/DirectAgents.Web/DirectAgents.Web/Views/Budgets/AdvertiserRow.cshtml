@model DirectAgents.Domain.Entities.Cake.Advertiser
@{
    var adv = Model;
}

<td>@(adv.AdManager==null ? "" : adv.AdManager.FullName)</td>
<td style="text-align:right">@adv.AdvertiserId</td>
<td>@Html.ActionLink(@adv.AdvertiserName, "Offers", new { advId = @adv.AdvertiserId })</td>
<td>@adv.Offers.Count <a href="#" onclick="SynchOffers(@adv.AdvertiserId); return false">(synch)</a></td>
