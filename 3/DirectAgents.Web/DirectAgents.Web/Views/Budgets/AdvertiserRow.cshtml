@model DirectAgents.Domain.Entities.Cake.Advertiser
@{
    var adv = Model;
}

<td>@(adv.AdManager==null ? "" : adv.AdManager.FullName)</td>
<td style="text-align:right">@adv.AdvertiserId</td>
<td>@adv.AdvertiserName</td>
<td>
    @Html.ActionLink("Show:", "Offers", new { advId = @adv.AdvertiserId })
    @adv.Offers.Count
</td>
<td>
    <a href="#" onclick="SynchOffers(@adv.AdvertiserId); return false">(synch)</a>
</td>
