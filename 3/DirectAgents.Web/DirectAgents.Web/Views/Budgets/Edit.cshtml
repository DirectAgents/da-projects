@model DirectAgents.Domain.Entities.Cake.Offer

<h3>Edit Offer Budget</h3>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <fieldset>
        <legend>Offer Details</legend>
        @Html.HiddenFor(m => m.OfferId)
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Advertiser)</td>
                <td>@Html.DisplayFor(m => m.Advertiser.AdvertiserName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.OfferId)</td>
                <td>@Html.DisplayFor(m => m.OfferId)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.OfferName)</td>
                <td>@Html.DisplayFor(m => m.OfferName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.DateCreated)</td>
                <td>@Html.DisplayFor(m => m.DateCreated)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Budget)</td>
                <td>@Html.EditorFor(m => m.Budget)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.BudgetIsMonthly)</td>
                <td>@Html.EditorFor(m => m.BudgetIsMonthly)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.BudgetStart)</td>
                <td>@Html.EditorFor(m => m.BudgetStart)</td>
            </tr>
        </table>
        <br />
        <input type="submit" value="Save" />
    </fieldset>
}

<br />
@Html.ActionLink("Cancel", "Show", new { offerId = Model.OfferId })
